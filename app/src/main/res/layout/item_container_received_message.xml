<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/item_received_mess"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_8sdp"
    android:padding="@dimen/_4sdp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imgAvt"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:background="@drawable/bg_image"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@id/layout_RECEIVER"
        app:layout_constraintStart_toStartOf="parent"
        app:riv_oval="true" />

    <LinearLayout
        android:id="@+id/layout_RECEIVER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_4sdp"
        android:layout_marginRight="@dimen/_4sdp"
        android:layout_gravity="left"
        android:background="@drawable/bg_received_message"
        android:orientation="vertical"
        app:layout_constraintLeft_toRightOf="@id/imgAvt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="wrap"
        app:layout_constraintWidth_percent="0.75">
        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingLeft="@dimen/_12sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingRight="@dimen/_12sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:text="Hi"
            android:textColor="@color/white"
            android:textSize="@dimen/_13ssp" />


        <ImageView
            android:layout_margin="@dimen/_5sdp"
            android:id="@+id/img_mess"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_200sdp"
            android:layout_gravity="right"
            android:visibility="gone"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tvDateTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:text="Date time"
        android:textColor="@color/secondary_text"
        android:textSize="@dimen/_8ssp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_RECEIVER" />

</androidx.constraintlayout.widget.ConstraintLayout>